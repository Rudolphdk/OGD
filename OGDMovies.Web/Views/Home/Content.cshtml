@using OGDMovies.Web.Enums
@using OGDMovies.Web.Models
@model OGDMovies.Common.Models.AggregatedModel

<link href="~/Content/overflowBlock.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
@{
    var showPagination = (!string.IsNullOrEmpty(Model.Page) && !string.IsNullOrEmpty(Model.TotalPages));
}
<!-- Movie Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
        @if (Model != null)
        {
            if (showPagination)
            {
                <div align="right" style="padding: 10px">
                    Page <span class="badge" style="background-color: darkgrey">@Model.Page</span> of <span class="badge" style="background-color: darkgrey">@Model.TotalPages</span>
                </div>
            }

            <div>
                @foreach (var movieItem in Model.MovieResults)
                {
                    @Html.Partial("_GridList", new ThumbnailViewModel(movieItem.Id, movieItem.Title, movieItem.ImageUrl, movieItem.Plot, ThumbnailType.Movie))
                }
            </div>
        }
    </div>
    @if (showPagination)
    {
        <ul class="pager">
            <li><a id="MoviePrevious" href="#">Previous</a></li>
            <li><a id="MovieNext" href="#">Next</a></li>
        </ul>
    }
</div>

<!-- Youtube Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Youtube</h1>
        </div>
        @if (Model != null)
        {
            foreach (var youtubeItem in Model.YoutubeResults)
            {
                @Html.Partial("_GridList", new ThumbnailViewModel(youtubeItem.Id, youtubeItem.Title, youtubeItem.ImageUrl, youtubeItem.Description, ThumbnailType.Youtube))
            }
        }
    </div>
    <ul class="pager">
        <li><a href="#">Previous</a></li>
        <li><a href="#">Next</a></li>
    </ul>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <p>This is a large modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover({
            container: 'body'
        });
        $('[data-toggle="popover"]').on('click', function (e) { e.preventDefault(); return true; });
    });
</script>